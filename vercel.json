{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/frontend/index.html",
      "permanent": true
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "domains": [
    {
      "name": "portfolio.xyz",
      "type": "alias"
    }
  ]
}
